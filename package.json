{
  "name": "blog",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "new:post": "node scripts/new-post.mjs",
    "collect:feeds": "node scripts/collect-feeds.mjs",
    "collect:feeds:seed": "node scripts/collect-feeds.mjs --seed",
    "collect:community": "node scripts/collect-community.mjs",
    "collect:community:seed": "node scripts/collect-community.mjs --seed",
    "select:topics": "node scripts/select-hot-topics.mjs --count 3 --max-age-hours 72 --min-score 18",
    "select:topics:seed": "node scripts/select-hot-topics.mjs --count 3 --max-age-hours 72 --min-score 18 --include-seed",
    "write:batch": "node scripts/write-batch.mjs --count 3",
    "write:batch:publish": "node scripts/write-batch.mjs --count 3 --publish",
    "write:batch:seed": "node scripts/write-batch.mjs --count 3 --allow-generic-url",
    "auto:daily": "npm run collect:feeds && npm run collect:community && npm run select:topics && npm run write:batch",
    "auto:daily:seed": "npm run collect:feeds:seed && npm run collect:community:seed && npm run select:topics:seed && npm run write:batch:seed",
    "write:url": "node scripts/write-from-url.mjs",
    "tistory:summary": "node scripts/generate-tistory-summary.mjs"
  },
  "dependencies": {
    "@astrojs/rss": "^4.0.15",
    "@astrojs/sitemap": "^3.7.0",
    "astro": "^5.17.1"
  }
}
