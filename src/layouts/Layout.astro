---
const {
  title = "JKGOOOOOOO Tech Blog",
  description = "IT 기술 정리와 개발 노트",
  canonical,
  ogImage,
  type = "website",
  publishedTime,
  jsonLd,
} = Astro.props;

const defaultSite = "https://jkgooooooo.github.io";
const siteUrl = Astro.site ?? new URL(defaultSite);
const rawBase = import.meta.env.BASE_URL ?? "/";
const basePath =
  rawBase === "/" ? "/" : `/${rawBase.replace(/^\/+|\/+$/g, "")}/`;
const resolvedOgImage = ogImage ?? `${basePath}og-default.svg`;
const canonicalUrl = canonical
  ? new URL(canonical, siteUrl).toString()
  : new URL(basePath, siteUrl).toString();
const ogImageUrl = new URL(resolvedOgImage, siteUrl).toString();
---

<!doctype html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta
      name="google-site-verification"
      content="5-_fMNBE9g5JqJJkwBXHMB4ypa779G8Zcur-hLp-kPM"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;700;800&family=Noto+Sans+KR:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
    <link rel="icon" type="image/svg+xml" href={`${basePath}favicon.svg`} />
    <link rel="icon" href={`${basePath}favicon.ico`} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalUrl} />

    <meta property="og:type" content={type} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:site_name" content="JKGOOOOOOO Blog" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageUrl} />
    {publishedTime ? <meta property="article:published_time" content={publishedTime} /> : null}
    {jsonLd ? <script type="application/ld+json" set:html={JSON.stringify(jsonLd)}></script> : null}
  </head>
  <body>
    <div class="site-wrap">
      <a class="skip-link" href="#main-content">본문으로 건너뛰기</a>
      <div class="content-wrap">
        <slot />
      </div>
      <footer class="site-footer">
        <nav class="site-nav">
          <a href={basePath}>Home</a>
          <a href={`${basePath}posts/`}>Posts</a>
          <a href={`${basePath}categories/`}>Categories</a>
          <a href={`${basePath}rss.xml`}>RSS</a>
          <a href="https://github.com/jkgooooooo/blog">GitHub</a>
        </nav>
      </footer>
    </div>
  </body>
</html>

<style>
  :root {
    color-scheme: dark;
    --bg: #05070b;
    --text: #d4d4d8;
    --heading: #f5f7fb;
    --muted: #9ca3af;
    --line: rgba(148, 163, 184, 0.16);
    --accent: #60a5fa;
    --surface: #111722;
    --surface-soft: #0f141d;
    --surface-hover: #182234;
    --max-width: 780px;
    --focus-ring: 0 0 0 2px #0b0b0c, 0 0 0 4px #60a5fa;
  }

  html,
  body {
    margin: 0;
    background: var(--bg);
    color: var(--text);
    font-family: "Noto Sans KR", "Apple SD Gothic Neo", "Malgun Gothic", sans-serif;
    line-height: 1.65;
    text-rendering: optimizeLegibility;
    -webkit-font-smoothing: antialiased;
  }

  .site-wrap {
    min-height: 100vh;
    width: min(var(--max-width), calc(100% - 2rem));
    margin: 0 auto;
    display: flex;
    flex-direction: column;
  }

  .content-wrap {
    flex: 1;
    padding: clamp(4.25rem, 10vh, 6rem) 0 2.8rem;
    animation: fade-in 220ms ease;
  }

  .skip-link {
    position: absolute;
    left: -999px;
    top: 0.75rem;
    z-index: 1000;
    background: #1f2937;
    color: #f4f4f5;
    padding: 0.5rem 0.75rem;
    border-radius: 8px;
    text-decoration: none;
    font-size: 0.88rem;
    font-weight: 700;
  }

  .skip-link:focus-visible {
    left: 1rem;
  }

  .site-footer {
    margin-top: 0.8rem;
    padding: 0.65rem 0 1rem;
    transition:
      opacity 180ms ease,
      transform 180ms ease;
  }

  .site-footer nav {
    display: flex;
    flex-wrap: wrap;
    gap: 0.62rem 0.88rem;
  }

  .site-footer a {
    font-size: 0.83rem;
    color: var(--muted);
    text-decoration: none;
    font-weight: 600;
    transition: color 120ms ease;
  }

  .site-footer a:hover {
    color: #fafafa;
  }

  :global(main) {
    display: block;
  }

  :global(h1),
  :global(h2),
  :global(h3) {
    margin: 0;
    color: var(--heading);
    font-family: "Manrope", "Noto Sans KR", sans-serif;
    letter-spacing: -0.02em;
  }

  :global(a) {
    color: inherit;
    text-underline-offset: 0.14em;
    text-decoration-thickness: 0.08em;
  }

  :global(a:focus-visible),
  :global(button:focus-visible),
  :global(input:focus-visible),
  :global(textarea:focus-visible),
  :global(select:focus-visible) {
    outline: 0;
    box-shadow: var(--focus-ring);
    border-radius: 8px;
  }

  :global(::selection) {
    background: #1e3a8a;
  }

  @keyframes fade-in {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @media (max-width: 640px) {
    .content-wrap {
      padding-top: 2.6rem;
    }

    .site-footer.is-hidden {
      opacity: 0;
      transform: translateY(12px);
      pointer-events: none;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    *,
    *::before,
    *::after {
      animation-duration: 0.001ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.001ms !important;
      scroll-behavior: auto !important;
    }
  }
</style>
