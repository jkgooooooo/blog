---
const {
  title = "JKGOOOOOOO Tech Blog",
  description = "IT 기술 정리와 개발 노트",
  canonical,
  ogImage,
  type = "website",
  publishedTime,
} = Astro.props;

const defaultSite = "https://jkgooooooo.github.io";
const siteUrl = Astro.site ?? new URL(defaultSite);
const rawBase = import.meta.env.BASE_URL ?? "/";
const basePath =
  rawBase === "/" ? "/" : `/${rawBase.replace(/^\/+|\/+$/g, "")}/`;
const resolvedOgImage = ogImage ?? `${basePath}og-default.svg`;
const canonicalUrl = canonical
  ? new URL(canonical, siteUrl).toString()
  : new URL(basePath, siteUrl).toString();
const ogImageUrl = new URL(resolvedOgImage, siteUrl).toString();
---

<!doctype html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;700;800&family=Noto+Sans+KR:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
    <link rel="icon" type="image/svg+xml" href={`${basePath}favicon.svg`} />
    <link rel="icon" href={`${basePath}favicon.ico`} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalUrl} />

    <meta property="og:type" content={type} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:site_name" content="JKGOOOOOOO Blog" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageUrl} />
    {publishedTime ? <meta property="article:published_time" content={publishedTime} /> : null}
  </head>
  <body>
    <div class="site-wrap">
      <div class="content-wrap">
        <slot />
      </div>
      <footer class="site-footer">
        <nav>
          <a href={basePath}>Home</a>
          <a href={`${basePath}posts/`}>Posts</a>
          <a href={`${basePath}categories/`}>Categories</a>
          <a href={`${basePath}rss.xml`}>RSS</a>
          <a href="https://github.com/jkgooooooo/blog">GitHub</a>
        </nav>
      </footer>
    </div>
  </body>
</html>

<style>
  :root {
    color-scheme: dark;
    --bg: #0b0b0c;
    --text: #d4d4d8;
    --heading: #f4f4f5;
    --muted: #a1a1aa;
    --line: #27272a;
    --accent: #60a5fa;
    --surface: #111113;
  }

  html,
  body {
    margin: 0;
    background: var(--bg);
    color: var(--text);
    font-family: "Noto Sans KR", "Apple SD Gothic Neo", "Malgun Gothic", sans-serif;
  }

  .site-wrap {
    min-height: 100vh;
    width: min(760px, calc(100% - 2rem));
    margin: 0 auto;
    display: flex;
    flex-direction: column;
  }

  .content-wrap {
    flex: 1;
    padding: 3rem 0 2.5rem;
    animation: fade-in 220ms ease;
  }

  .site-footer {
    padding: 1rem 0 2rem;
  }

  .site-footer nav {
    display: flex;
    flex-wrap: wrap;
    gap: 0.8rem;
  }

  .site-footer a {
    font-size: 0.9rem;
    color: var(--muted);
    text-decoration: none;
    font-weight: 600;
  }

  .site-footer a:hover {
    color: #fafafa;
  }

  :global(main) {
    display: block;
  }

  :global(h1),
  :global(h2),
  :global(h3) {
    margin: 0;
    color: var(--heading);
    font-family: "Manrope", "Noto Sans KR", sans-serif;
    letter-spacing: -0.02em;
  }

  :global(a) {
    color: inherit;
    text-underline-offset: 0.14em;
  }

  :global(::selection) {
    background: #1e3a8a;
  }

  @keyframes fade-in {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @media (max-width: 640px) {
    .content-wrap {
      padding-top: 1.8rem;
    }
  }
</style>
