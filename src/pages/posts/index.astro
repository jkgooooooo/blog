---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";

const rawBase = import.meta.env.BASE_URL ?? "/";
const basePath =
  rawBase === "/" ? "/" : `/${rawBase.replace(/^\/+|\/+$/g, "")}/`;
const includeDrafts = import.meta.env.DEV;

const posts = (await getCollection("blog", ({ data }) => includeDrafts || !data.draft)).sort(
  (a, b) => new Date(b.data.pubDate).valueOf() - new Date(a.data.pubDate).valueOf(),
);

const getReadingMinutes = (body = "") =>
  Math.max(1, Math.ceil(body.split(/\s+/).filter(Boolean).length / 220));
const getDisplayTags = (post) =>
  (post.data.tags?.length ? post.data.tags : [post.data.category ?? "General"]).slice(0, 4);
const formatDate = (date) => new Date(date).toLocaleDateString("ko-KR");
---

<Layout title="Posts | JKGOOOOOOO Blog" description="모든 포스트 목록">
  <main id="main-content" class="posts-page">
    <header>
      <a class="home-link" href={basePath} aria-label="메인으로 이동">
        <svg viewBox="0 0 24 24" aria-hidden="true">
          <path
            d="M3 10.75 12 3l9 7.75V20a1 1 0 0 1-1 1h-5.5v-6.25h-5V21H4a1 1 0 0 1-1-1z"
            fill="currentColor"
          ></path>
        </svg>
        <span>Home</span>
      </a>
      <h1>Posts</h1>
      <p>지금까지 발행한 모든 글입니다.</p>
    </header>

    <ul class="row-list">
      {posts.map((post) => (
        <li>
          <a class="row-link" href={`${basePath}${post.slug}/`}>
            <div class="row-main">
              <h2>{post.data.title}</h2>
              <p class="row-desc">{post.data.description || "요약 설명을 추가해 주세요."}</p>
              <p class="row-meta">
                <span class="meta-tags">
                  {getDisplayTags(post).map((tag) => (
                    <span class="tag-pill">#{tag}</span>
                  ))}
                </span>
                <span aria-hidden="true">·</span>
                <span>{getReadingMinutes(post.body)} min</span>
              </p>
            </div>
            <time datetime={new Date(post.data.pubDate).toISOString()}>{formatDate(post.data.pubDate)}</time>
          </a>
        </li>
      ))}
    </ul>
  </main>
</Layout>

<style>
  .home-link {
    display: inline-flex;
    align-items: center;
    gap: 0.42rem;
    text-decoration: none;
    color: #d4d4d8;
    font-size: 0.84rem;
    font-weight: 700;
    background: var(--surface);
    box-shadow: inset 0 0 0 1px var(--line);
    border-radius: 999px;
    padding: 0.38rem 0.64rem;
    margin-bottom: 0.7rem;
    transition: background-color 120ms ease;
  }

  .home-link:hover {
    background: var(--surface-hover);
  }

  .home-link svg {
    width: 0.84rem;
    height: 0.84rem;
    display: block;
  }

  header p {
    margin: 0.5rem 0 0;
    color: #a1a1aa;
    line-height: 1.72;
  }

  .row-list {
    list-style: none;
    margin: 1.5rem 0 0;
    padding: 0;
    border-top: 1px solid var(--line);
  }

  .row-link {
    display: grid;
    grid-template-columns: minmax(0, 1fr) 7.3rem;
    gap: 0.75rem 1rem;
    align-items: start;
    padding: 1rem 0.15rem;
    border-bottom: 1px solid var(--line);
    text-decoration: none;
    transition: background-color 140ms ease;
  }

  .row-link:hover {
    background: rgba(148, 163, 184, 0.06);
  }

  .row-main h2 {
    margin: 0;
    font-size: 1.1rem;
    line-height: 1.36;
  }

  .row-desc {
    margin: 0.34rem 0 0;
    color: #a1a1aa;
    line-height: 1.6;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .row-meta {
    margin: 0.4rem 0 0;
    font-size: 0.8rem;
    line-height: 1.4;
    color: #94a3b8;
    display: inline-flex;
    align-items: flex-start;
    flex-wrap: wrap;
    gap: 0.35rem;
  }

  .meta-tags {
    display: inline-flex;
    flex-wrap: wrap;
    gap: 0.3rem;
  }

  .tag-pill {
    display: inline-flex;
    align-items: center;
    border-radius: 999px;
    padding: 0.1rem 0.42rem;
    background: var(--surface-soft);
    color: #b6c2d1;
    font-size: 0.74rem;
    line-height: 1.2;
    font-weight: 600;
  }

  .row-link time {
    color: #a1a1aa;
    font-size: 0.86rem;
    font-weight: 600;
    text-align: right;
    line-height: 1.45;
    white-space: nowrap;
    padding-top: 0.08rem;
  }

  @media (max-width: 720px) {
    .row-link {
      grid-template-columns: 1fr;
      gap: 0.45rem;
      padding: 0.9rem 0.05rem;
    }

    .row-link time {
      text-align: left;
      font-size: 0.8rem;
      padding-top: 0;
    }
  }
</style>
