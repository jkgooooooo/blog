---
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";

const rawBase = import.meta.env.BASE_URL ?? "/";
const basePath =
  rawBase === "/" ? "/" : `/${rawBase.replace(/^\/+|\/+$/g, "")}/`;
const includeDrafts = import.meta.env.DEV;

const posts = (await getCollection("blog", ({ data }) => includeDrafts || !data.draft)).sort(
  (a, b) => new Date(b.data.pubDate).valueOf() - new Date(a.data.pubDate).valueOf(),
);

const HOME_POST_LIMIT = 6;
const latestPosts = posts.slice(0, HOME_POST_LIMIT);
const remainingPosts = Math.max(0, posts.length - latestPosts.length);
const getReadingMinutes = (body = "") =>
  Math.max(1, Math.ceil(body.split(/\s+/).filter(Boolean).length / 220));
const getDisplayTags = (post) =>
  (post.data.tags?.length ? post.data.tags : [post.data.category ?? "General"]).slice(0, 4);
const formatDate = (date) => new Date(date).toLocaleDateString("ko-KR");
---

<Layout title="JKGOOOOOOO Tech Blog" description="IT 기술 정리와 개발 기록">
  <main id="main-content" class="home">
    <header class="intro">
      <h1>JKGOOOOOOO Blog</h1>
      <p>iOS 개발을 하고 있으며, 생각나는 것들을 편하게 기록하는 블로그입니다.</p>
    </header>

    <section class="home-feed" aria-label="최근 글">
      <ul class="row-list">
        {latestPosts.map((post) => (
          <li>
            <a class="row-link" href={`${basePath}${post.slug}/`}>
              <div class="row-main">
                <h2>{post.data.title}</h2>
                <p class="row-desc">{post.data.description || "요약 설명을 추가해 주세요."}</p>
                <p class="row-meta">
                  <span class="meta-tags">
                    {getDisplayTags(post).map((tag) => (
                      <span class="tag-pill">#{tag}</span>
                    ))}
                  </span>
                  <span aria-hidden="true">·</span>
                  <span>{getReadingMinutes(post.body)} min</span>
                </p>
              </div>
              <time datetime={new Date(post.data.pubDate).toISOString()}>{formatDate(post.data.pubDate)}</time>
            </a>
          </li>
        ))}
      </ul>
      {remainingPosts > 0 ? (
        <p class="more-hint">
          <span aria-hidden="true">↓</span>
          {remainingPosts}개의 글이 더 있습니다
        </p>
      ) : null}
      <div class="section-cta">
        <a href={`${basePath}posts/`}>전체 글 보러가기</a>
      </div>
    </section>
  </main>
</Layout>

<style>
  .home {
    --space-32: 2rem;
    --space-48: 3rem;
  }

  .intro h1 {
    font-size: clamp(2.1rem, 6vw, 3rem);
    line-height: 1.04;
    margin-bottom: 0.5rem;
  }

  .intro p {
    margin: 0;
    color: #a1a1aa;
    max-width: 62ch;
    line-height: 1.7;
  }

  .home-feed {
    margin-top: var(--space-48);
  }

  .row-list {
    list-style: none;
    margin: 0;
    padding: 0;
    border-top: 1px solid var(--line);
  }

  .row-link {
    display: grid;
    grid-template-columns: minmax(0, 1fr) 7.3rem;
    gap: 0.75rem 1rem;
    align-items: start;
    padding: 1rem 0.15rem;
    border-bottom: 1px solid var(--line);
    text-decoration: none;
    transition: background-color 140ms ease;
  }

  .row-link:hover {
    background: rgba(148, 163, 184, 0.06);
  }

  .row-main h2 {
    margin: 0;
    font-size: 1.1rem;
    line-height: 1.36;
  }

  .row-desc {
    margin: 0.34rem 0 0;
    color: #a1a1aa;
    line-height: 1.6;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .row-meta {
    margin: 0.4rem 0 0;
    font-size: 0.8rem;
    line-height: 1.4;
    color: #94a3b8;
    display: inline-flex;
    align-items: flex-start;
    flex-wrap: wrap;
    gap: 0.35rem;
  }

  .meta-tags {
    display: inline-flex;
    flex-wrap: wrap;
    gap: 0.3rem;
  }

  .tag-pill {
    display: inline-flex;
    align-items: center;
    border-radius: 999px;
    padding: 0.1rem 0.42rem;
    background: var(--surface-soft);
    color: #b6c2d1;
    font-size: 0.74rem;
    line-height: 1.2;
    font-weight: 600;
  }

  .row-link time {
    color: #a1a1aa;
    font-size: 0.86rem;
    font-weight: 600;
    text-align: right;
    line-height: 1.45;
    white-space: nowrap;
    padding-top: 0.08rem;
  }

  .section-cta {
    margin-top: 0.75rem;
  }

  .more-hint {
    margin: 1rem 0 0;
    color: #94a3b8;
    font-size: 0.84rem;
    line-height: 1.45;
    display: inline-flex;
    align-items: center;
    gap: 0.36rem;
  }

  .more-hint span {
    color: #a1a1aa;
    font-size: 0.9rem;
  }

  .section-cta a {
    display: inline-flex;
    align-items: center;
    text-decoration: none;
    font-size: 0.88rem;
    font-weight: 700;
    color: #d4d4d8;
    background: var(--surface);
    box-shadow: inset 0 0 0 1px var(--line);
    border-radius: 999px;
    padding: 0.5rem 0.72rem;
    transition: background-color 120ms ease;
  }

  .section-cta a:hover {
    background: var(--surface-hover);
  }

  @media (max-width: 720px) {
    .row-link {
      grid-template-columns: 1fr;
      gap: 0.45rem;
      padding: 0.9rem 0.05rem;
    }

    .row-link time {
      text-align: left;
      font-size: 0.8rem;
      padding-top: 0;
    }
  }
</style>
