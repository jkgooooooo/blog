---
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";

const rawBase = import.meta.env.BASE_URL ?? "/";
const basePath = rawBase === "/" ? "/" : `/${rawBase.replace(/^\/+|\/+$/g, "")}/`;
const includeDrafts = import.meta.env.DEV;

const posts = (await getCollection("blog", ({ data }) => includeDrafts || !data.draft)).sort(
  (a, b) => new Date(b.data.pubDate).valueOf() - new Date(a.data.pubDate).valueOf(),
);

const HOME_POST_LIMIT = 6;
const latestPosts = posts.slice(0, HOME_POST_LIMIT);

const formatDate = (date) => {
  const d = new Date(date);
  return `${d.getFullYear()}-${String(d.getMonth() + 1).padStart(2, "0")}-${String(d.getDate()).padStart(2, "0")}`;
};

const getTags = (post) =>
  (post.data.tags?.length ? post.data.tags : [post.data.category ?? "General"]).slice(0, 3);
---

<Layout title="JKGOOOOOOO Tech Blog" description="그때그때 정리하는 메모">
  <main id="main-content" class="insight-home">
    <header class="topbar">
      <p class="brand">Tech Insights</p>
      <nav aria-label="상단 메뉴">
        <a href={basePath}>Home</a>
        <a href={`${basePath}posts/`} class="is-active">Posts</a>
        <a href={`${basePath}categories/`}>About</a>
      </nav>
    </header>

    <section class="hero" aria-label="소개">
      <h1>그때그때 정리하는 메모</h1>
      <p>AI, 개발, IT 관련 소식을 읽고 핵심만 짧게 기록해두는 블로그입니다.</p>
    </section>

    <section class="latest" aria-label="최신 글">
      <p class="section-label">LATEST WRITING</p>
      <ul class="post-list">
        {latestPosts.map((post) => (
          <li>
            <a class="post-link" href={`${basePath}${post.slug}/`}>
              <div class="post-main">
                <h2>{post.data.title}</h2>
                <p class="desc">{post.data.description || "요약 설명이 아직 없습니다."}</p>
                <p class="tags">{getTags(post).map((tag) => `#${tag}`).join("  ")}</p>
              </div>
              <time datetime={new Date(post.data.pubDate).toISOString()}>{formatDate(post.data.pubDate)}</time>
            </a>
          </li>
        ))}
      </ul>

      <a class="archive-link" href={`${basePath}posts/`}>전체 글 보러가기 →</a>
    </section>

    <footer class="home-footer">
      <p>© 2026 Tech Insights</p>
      <div class="footer-links">
        <a href={`${basePath}rss.xml`}>RSS</a>
        <a href="https://github.com/jkgooooooo">GitHub</a>
      </div>
    </footer>
  </main>
</Layout>

<style>
  :global(:root) {
    --max-width: 860px;
  }

  :global(body) {
    background: #040507;
  }

  :global(.site-footer) {
    display: none;
  }

  :global(.content-wrap) {
    padding-top: 2.2rem;
    padding-bottom: 2.1rem;
  }

  .insight-home {
    min-height: calc(100vh - 4rem);
  }

  .topbar {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
  }

  .brand {
    margin: 0;
    font-size: 1.02rem;
    font-weight: 700;
    color: #ededed;
    letter-spacing: -0.01em;
  }

  .topbar nav {
    display: inline-flex;
    gap: 1.3rem;
  }

  .topbar a {
    color: #9fa4ad;
    text-decoration: none;
    font-size: 0.84rem;
    font-weight: 600;
  }

  .topbar a:hover {
    color: #f1f5f9;
  }

  .topbar a.is-active {
    color: #f4f4f5;
    text-decoration: underline;
    text-underline-offset: 0.3em;
  }

  .hero {
    margin-top: clamp(2.6rem, 8vw, 4rem);
  }

  .hero h1 {
    font-size: clamp(1.78rem, 5.1vw, 2.58rem);
    line-height: 1.06;
    letter-spacing: -0.02em;
  }

  .hero p {
    margin: 1.1rem 0 0;
    max-width: 66ch;
    color: #a3a8b1;
    font-size: 0.92rem;
    line-height: 1.68;
  }

  .latest {
    margin-top: clamp(2.4rem, 7vw, 3.8rem);
  }

  .section-label {
    margin: 0;
    color: #9aa1ac;
    font-size: 0.76rem;
    letter-spacing: 0.14em;
  }

  .post-list {
    list-style: none;
    margin: 0.7rem 0 0;
    padding: 0;
    border-top: 1px solid rgba(148, 163, 184, 0.2);
  }

  .post-list li {
    border-bottom: 1px solid rgba(148, 163, 184, 0.13);
  }

  .post-link {
    display: grid;
    grid-template-columns: minmax(0, 1fr) auto;
    gap: 0.9rem 1rem;
    align-items: start;
    text-decoration: none;
    padding: 1.2rem 0;
    transition: background-color 120ms ease;
  }

  .post-link:hover {
    background: rgba(148, 163, 184, 0.04);
  }

  .post-main h2 {
    margin: 0;
    font-size: 1.32rem;
    line-height: 1.24;
    letter-spacing: -0.01em;
  }

  .desc {
    margin: 0.5rem 0 0;
    color: #9ca3af;
    font-size: 0.87rem;
    line-height: 1.62;
  }

  .tags {
    margin: 0.52rem 0 0;
    color: #8b93a2;
    font-size: 0.74rem;
    line-height: 1.44;
  }

  .post-link time {
    color: #9ca3af;
    font-size: 0.82rem;
    font-weight: 600;
    padding-top: 0.2rem;
    white-space: nowrap;
  }

  .archive-link {
    margin-top: 1.15rem;
    display: inline-flex;
    align-items: center;
    color: #d4d4d8;
    font-size: 0.86rem;
    text-underline-offset: 0.22em;
    text-decoration-thickness: 0.07em;
  }

  .home-footer {
    margin-top: clamp(3rem, 10vw, 4.3rem);
    padding-top: 1.1rem;
    border-top: 1px solid rgba(148, 163, 184, 0.16);
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 0.7rem;
    color: #7f8694;
    font-size: 0.74rem;
  }

  .home-footer p {
    margin: 0;
  }

  .footer-links {
    display: inline-flex;
    gap: 0.9rem;
  }

  .footer-links a {
    color: inherit;
    text-decoration: none;
    font-weight: 600;
  }

  .footer-links a:hover {
    color: #e4e4e7;
  }

  @media (max-width: 760px) {
    :global(:root) {
      --max-width: 860px;
    }

    .topbar {
      flex-wrap: wrap;
    }

    .topbar nav {
      gap: 0.9rem;
    }

    .hero h1 {
      font-size: clamp(1.52rem, 8.2vw, 2rem);
    }

    .hero p {
      font-size: 0.84rem;
    }

    .post-link {
      grid-template-columns: 1fr;
      gap: 0.45rem;
      padding: 1.2rem 0;
    }

    .post-main h2 {
      font-size: 1rem;
    }

    .desc {
      font-size: 0.8rem;
    }

    .tags,
    .post-link time,
    .archive-link,
    .home-footer {
      font-size: 0.72rem;
    }

    .home-footer {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.4rem;
    }
  }
</style>
