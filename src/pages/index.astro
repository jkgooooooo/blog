    height: 1.05em;
    background: #9aa4b2;
    transform: translateY(0.14em);
    margin-left: 0.35rem;
    animation: blink 1s steps(1, end) infinite;
  }

  .terminal-window {
    margin-top: 0.8rem;
    border-radius: 12px;
    border: 1px solid rgba(148, 163, 184, 0.24);
    background: linear-gradient(180deg, rgba(9, 12, 18, 0.95), rgba(4, 6, 10, 0.98));
    overflow: hidden;
    box-shadow: 0 14px 34px rgba(0, 0, 0, 0.4);
