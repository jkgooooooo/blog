---
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";

const rawBase = import.meta.env.BASE_URL ?? "/";
const basePath =
  rawBase === "/" ? "/" : `/${rawBase.replace(/^\/+|\/+$/g, "")}/`;
const includeDrafts = import.meta.env.DEV;

const posts = (await getCollection("blog", ({ data }) => includeDrafts || !data.draft)).sort(
  (a, b) => new Date(b.data.pubDate).valueOf() - new Date(a.data.pubDate).valueOf(),
);

const HOME_POST_LIMIT = 7;
const latestPosts = posts.slice(0, HOME_POST_LIMIT);
const remainingPosts = Math.max(0, posts.length - latestPosts.length);

const formatLogDate = (date) => {
  const d = new Date(date);
  return `${d.getFullYear()}.${String(d.getMonth() + 1).padStart(2, "0")}.${String(d.getDate()).padStart(2, "0")}`;
};

const toCodeToken = (value = "") =>
  String(value)
    .toLowerCase()
    .replace(/[^a-z0-9가-힣]+/g, "_")
    .replace(/^_+|_+$/g, "");

const toFunctionName = (post, index) => {
  const normalizedTitle = String(post.data.title ?? "")
    .trim()
    .replace(/\s*\+\s*/g, "+")
    .replace(/_*\+_*/g, "+");

  const fromTitle = normalizedTitle
    .replace(/\s+/g, "_")
    .replace(/[^a-z0-9_+가-힣]/gi, "")
    .replace(/_{2,}/g, "_")
    .replace(/^_+|_+$/g, "");

  if (!fromTitle) return `post_${String(index + 1).padStart(2, "0")}`;
  return fromTitle.length > 34 ? `${fromTitle.slice(0, 34)}...` : fromTitle;
};

const getTagTokens = (post) =>
  (post.data.tags?.length ? post.data.tags : [post.data.category ?? "general"])
    .slice(0, 3)
    .map(toCodeToken)
    .filter(Boolean)
    .map((tag) => `.${tag}`)
    .join(", ");

const cpuLoad = 2 + (posts.length % 5);
const ramUsage = (1.2 + posts.length * 0.04).toFixed(1);
const latency = 10 + (posts.length % 4) * 2;
const editorLine = 100 + latestPosts.length;
---

<Layout title="JKGOOOOOOO Tech Blog" description="개발 메모와 기술 정리">
  <main id="main-content" class="home-terminal">
    <header class="topline">
      <p class="path">user@dev_logs: ~/blog-project</p>
      <p class="status">CPU: {cpuLoad}% | RAM: {ramUsage}GB | LATENCY: {latency}ms</p>
    </header>

    <section class="intro" aria-label="블로그 소개">
      <p class="prompt">$ swift --version</p>
      <h1>iOS Engineer<br />그때그때 정리하는 메모</h1>
      <p class="summary">/// 인간의 기억력에는 한계가 있고, 메모를 합시다 !!!</p>
      <p class="line">/// 하루에 필요한 내용만 빠르게 다시 보려고 기록합니다.</p>
      <div class="links">
        <a href={`${basePath}posts/`}>posts</a>
        <a href={`${basePath}categories/`}>categories</a>
        <a href={`${basePath}rss.xml`}>rss</a>
        <a href="https://github.com/jkgooooooo/blog">github</a>
      </div>
    </section>

    <section class="logs" aria-label="최근 글 로그">
      <p class="prompt cmd">
        $ ls -la ./posts <span class="cursor" aria-hidden="true"></span>
      </p>

      <div class="terminal-window">
        <div class="window-head">
          <span class="dots" aria-hidden="true"><i></i><i></i><i></i></span>
          <span class="file-name">posts_list.swift</span>
        </div>

        <ul class="rows">
          {latestPosts.map((post, idx) => (
            <li>
              <a class="row-link" href={`${basePath}${post.slug}/`}>
                <div class="row-top">
                  <span class="row-num">{String(idx + 1).padStart(2, "0")}</span>
                  <span class="kw">func</span>
                  <h2>{toFunctionName(post, idx)}<span class="paren">()</span></h2>
                </div>
                <p class="row-meta">
                  <span class="folder" aria-hidden="true">▢</span>
                  <span>// Date: {formatLogDate(post.data.pubDate)}</span>
                  <span class="sep" aria-hidden="true">|</span>
                  <span>Tags: [{getTagTokens(post)}]</span>
                </p>
              </a>
            </li>
          ))}
        </ul>

        <div class="window-foot">
          <a href={`${basePath}posts/`}>↗ view_all_posts</a>
          <span>Ln {editorLine}, Col 1</span>
        </div>
      </div>

      {remainingPosts > 0 ? <p class="more">+ {remainingPosts} more logs available</p> : null}

      <div class="fetch">
        <a href={`${basePath}posts/`}>전체 글 보기</a>
      </div>
    </section>

    <footer class="local-footer">
      <p>© 2026 _dev_logs | Running on Astro + GitHub Pages</p>
      <p>build 2026.02.24</p>
    </footer>
  </main>
</Layout>

<style>
